<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="#fff"
    >
    <ImageView
        style="@style/article_img"
        android:id="@+id/imgView"
        app:srcCompat="@mipmap/test" />
    <TextView
        android:id="@+id/title"
        style="@style/article_title"
        android:text="글제목"
        />
    <TextView
        android:id="@+id/name"
        style="@style/article_name"
        android:text="작성자"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="60dp"
        >

        <TextView
            style="@style/article_icon"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_heart" />

        <TextView
            android:id="@+id/likeNum"
            style="@style/article_icon_text"
            android:layout_marginLeft="20dp"
            android:text="1000k" />

        <TextView
            style="@style/article_icon"
            android:layout_marginLeft="75dp"
            android:background="@drawable/ic_comment_alt" />

        <TextView
            android:id="@+id/commentNum"
            style="@style/article_icon_text"
            android:layout_marginLeft="90dp"
            android:text="1000k" />

        <TextView
            style="@style/article_icon"
            android:layout_marginLeft="145dp"
            android:background="@drawable/ic_eye" />

        <TextView
            android:id="@+id/viewNum"
            style="@style/article_icon_text"
            android:layout_marginLeft="160dp"
            android:text="1000k" />

    </FrameLayout>

    <TextView
        android:id="@+id/regdateText"
        style="@style/article_regdate_text"
        android:text="20xx년 xx월 xx일" />

</FrameLayout>